<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - html5Validation</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/bulma.css">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.1.2/css/bulma.css">
    </environment>
</head>

<body>
    <header>
        <h1>HTML5用バリデーション</h1>
    </header>

    <div class="container is-centered">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2019 - HTML5用バリデーション -
        </div>
    </footer>
    <script src="~/js/vaidationH5.js" asp-append-version="true"></script>
</body>

</html>
